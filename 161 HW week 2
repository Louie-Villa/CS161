#compression answers
original_size = 270
dictionary_size = 30
compressed_text_size = 170

compression_percent= 1-float((compressed_text_size + dictionary_size)/ original_size)
compression_percent=(compression_percent) *100

print ('Compressed text size:', str(compressed_text_size), 'characters')
print ('\n     Dictionary size:', str(dictionary_size), 'characters')
print ('\n               Total:', (int(dictionary_size)+ int(compressed_text_size)), 'characters')
print ('\n       Original_size:', str(original_size), 'characters')
print ('\n     Dictionary size:', str(dictionary_size), 'characters')
print ('\n         Compression:',round(compression_percent,2),'%')
